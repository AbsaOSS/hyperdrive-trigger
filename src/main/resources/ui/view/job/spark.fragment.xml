<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Label text="Job Name"/>
    <Input type="Text" placeholder="Job name*" width="100%" value="{/newJob/name}"/>

    <Label text="Job jar"/>
    <Input type="Text" placeholder="Job jar*" width="100%" value="{/newJob/jobParameters/variables/jobJar}"/>

    <Label text="Main class"/>
    <Input type="Text" placeholder="Main class*" width="100%" value="{/newJob/jobParameters/variables/mainClass}"/>

    <Label text="Deployment mode"/>
    <Select selectedKey="{/newJob/jobParameters/variables/deploymentMode}">
        <items>
            <core:Item key="cluster" text="cluster" />
            <core:Item key="client" text="client" />
        </items>
    </Select>

    <Label text="App arguments"/>
    <VBox>
        <List mode="Delete"
              items="{/newJob/jobParameters/maps/appArguments}"
              delete="onDeleteAppArgument"
              showNoData="false">
            <CustomListItem>
                <Input type="Text" value="{}" placeholder="App argument"/>
            </CustomListItem>
        </List>
        <Button icon="sap-icon://add" press="onAddAppArgument"/>
    </VBox>
</core:FragmentDefinition>
