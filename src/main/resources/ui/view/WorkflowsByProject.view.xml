<mvc:View
		controllerName="hyperdriver.controller.WorkflowsByProject"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text=""/>
					<Title text="Projects"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://refresh" type="Transparent" press=".onRefreshPress">
					</Button>
					<Title text=""/>
				</contentRight>
			</Bar>
		</customHeader>

		<l:BlockLayout background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell backgroundColorSet="ColorSet9" backgroundColorShade="ShadeA" width="3">
					<Table items="{/projectsInfo}" fixedLayout="false">
						<columns>
							<Column>
								<Text text="Project name"/>
							</Column>
							<Column>
								<Text text="Workflows count"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem
									vAlign="Middle"
									type="Navigation"
									press=".onProjectPress">
								<cells>
									<Text text="{projectName}"/>
									<Text text="{workflowsCount}"/>
									<ToggleButton
											icon="sap-icon://flag"
											pressed="{path: 'Flagged', type: '.types.flagged'}"
											class="sapUiMediumMarginBeginEnd"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
		<footer>
			<Bar>
				<contentRight>
					<Button
							id="createWorkflow"
							text="Create Workflow"
							icon="sap-icon://add"
							press=".onCreateWorkflow"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>