<mvc:View
		controllerName="hyperdriver.controller.RunsByWorkflow"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<customHeader>
			<Bar>
				<contentLeft>
					<Title text=""/>
					<Title text="Workflow runs"/>
				</contentLeft>
				<contentRight>
					<Button icon="sap-icon://nav-back" type="Transparent" press=".onBackPress">
					</Button>
					<Button icon="sap-icon://refresh" type="Transparent" press=".onRefreshPress">
					</Button>
					<Title text=""/>
				</contentRight>
			</Bar>
		</customHeader>

		<l:BlockLayout background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell backgroundColorSet="ColorSet9" backgroundColorShade="ShadeA" width="3">
					<Table items="{/perWorkflowStatistics}" fixedLayout="false">
						<columns>
							<Column>
								<Text text="Workflow name"/>
							</Column>
							<Column>
								<Text text="Is active"/>
							</Column>
							<Column>
								<Text text="Total"/>
							</Column>
							<Column>
								<Text text="Successful / Failed dags"/>
							</Column>
							<Column>
								<Text text="Queued / Running dags"/>
							</Column>

						</columns>
						<items>
							<ColumnListItem
									vAlign="Middle"
									type="Navigation"
									press=".onWorkflowPress">
								<cells>
									<Text text="{workflowName}"/>
									<Text text="{= ${isActive} ? 'Yes' : 'No' }"/>
									<Text text="{total}"/>
									<Text text="{successful} / {failed}"/>
									<Text text="{queued} / {running}"/>
									<ToggleButton
											icon="sap-icon://flag"
											pressed="{path: 'Flagged', type: '.types.flagged'}"
											class="sapUiMediumMarginBeginEnd"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
		<footer>
			<Bar>
				<contentRight>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>